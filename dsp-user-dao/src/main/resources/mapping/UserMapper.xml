<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.dsp.user.mapper.UserMapper" >
  
  
  
  
  
  <resultMap id="BaseResultMap" type="com.dsp.model.User" >
    <result column="username" property="username" jdbcType="VARCHAR" />
    <result column="password" property="password" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" > 
    username,password
  </sql>
  
  <select id="findList" resultType="com.dsp.model.User" >
    select * from users
  </select>
  
  
  <select id="findRoles" parameterType="java.lang.String" resultType="java.lang.String">
      select r.rName from users u, roles r,users_roles ur where u.username=#{username} and u.id=ur.user_id and r.rId=ur.role_id
    </select>

    <select id="findPermissions" parameterType="java.lang.String" resultType="java.lang.String">
      select p.pName from users u, roles r, permissions p, users_roles ur, roles_permissions rp where u.username=#{username} and u.id=ur.user_id and r.rId=ur.role_id and r.rId=rp.role_id and p.pId=rp.permission_id
    </select>

    <select id="findByUsername" parameterType="java.lang.String" resultType="com.dsp.model.User">
      select * from users where username = #{username}
    </select>
  
</mapper>
